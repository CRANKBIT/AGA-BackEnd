{
  "name": "allgood-backend",
  "version": "1.0.0",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon",
    "start": "nodemon",
    "start:node": "node dist/app.js",
    "start:pm2": "pm2 start dist/app.js",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "jest",
    "lint": "eslint --ext .ts, src/ --no-cache",
    "lint:f": "eslint --ext .ts, src/ --fix --no-cache",
    "prettier:f": "prettier --write .",
    "prepare": "husky install",
    "pre-commit": "npm run prettier:f && npm run lint:f && npx --no-install lint-staged"
  },
  "dependencies": {
    "axios": "^1.1.3",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^5.0.2",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.6.5",
    "morgan": "^1.10.0",
    "nodemailer": "^6.8.0",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.3.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.4",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "nodemon": "^2.0.16",
    "pm2": "^5.3.0",
    "prettier": "^2.8.8",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.6.4"
  },
  "nodemonConfig": {
    "exec": "ts-node src/app.ts",
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,json,md}": []
  },
  "engines": {
    "node": "^18.0.0",
    "yarn": "^3.6.0"
  }
}
